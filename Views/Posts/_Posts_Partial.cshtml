@model SimpleBlog.Infrastructure.PagedData<SimpleBlog.NHibernate.Entities.Post>

@foreach (var post in Model)
{
    @Html.Partial("_Post_Partial", post)
}

<ul class="list-unstyled">
    @if (Model.HasPreviousPage)
    {
        <li class="pull-left">
            <a href="@Url.Action(null, new {currentPage = Model.PreviousPage})" class="btn btn-primary">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Newer Posts
            </a>
        </li>
    }

    @if (Model.HasNextPage)
    {
        <li class="pull-right">
            <a href="@Url.Action(null, new {currentPage = Model.NextPage})" class="btn btn-primary">
                Older Posts
                <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        </li>
    }
</ul>
